<!-- User Profile -->
<div class="row">  
  <div class="col s4" id="info-col">
    <%= render 'image_card' %>
    <% unless owner?(@user) %>
    <%= render "users/#{friendship_status_button}" %> 
    <% end %>         
    <%= render 'user_info' %>
    <%= link_to 'show all friends', user_friends_path(@user.id) %> 
  </div>
  <div class='col s8'>
    <div class="section">
      <%= render 'shared/post_form' if owner?(@user) %>
    </div>
    <div class="divider"></div>
    <div class="section">
      <%= render 'shared/users_posts' %>
    </div>
  </div>
</div>

