
<center>       
  <ul class="collection">

    <li class="collection-item" id="comment-title">Users</li>

    <% if @users.any? %>
      <% @users.each do |user| %>

    <li class="collection-item avatar" align="left">
      <%= image_tag(user.profile.avatar.url, class: 'circle') %>
      <span class="title"><%= link_to user.full_name, user_profile_path(user) %></span>
    </li>
      
      <% end %>
    <% end %>
  </ul>
</center>