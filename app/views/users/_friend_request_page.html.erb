<center>        
  <ul class="collection" id="post-alone">
    <li class="collection-item" id="comment-title">Friend Requests</li>
    <% if current_user.friend_requests.any? %>

    <% current_user.friend_requests.each do |request| %>
    <li class="collection-item avatar" align="left">
      <%= image_tag('me.jpg', class: 'circle') %>
      <span class="title"><%= link_to requesters_name(request.user_id), user_profile_path(request.user_id) %></span>
      <p><%= link_to 'Accept', friendship_path(request), method: :put %></p>
    </li>
    <% end %>

  </ul>
</center>